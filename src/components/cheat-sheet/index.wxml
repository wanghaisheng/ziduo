<view class="title">拼音速查表</view>
<view wx:if="{{ inputMode === 'zy' }}" class="zy">
  <view wx:for="{{ zySymbols }}" wx:key="s" class="symbol {{ item.c }}">
    {{ item.s }}
  </view>
</view>
<view wx:if="{{ inputMode === 'sp' }}" class="sp">
  <view class="sub-title">声母</view>
  <view class="sub-title">韵母</view>
  <view class="sp-item">
    <view wx:for="{{ spConstants.initials }}" wx:key="s" class="{{ item.c }}">
      {{ item.s }}
    </view>
  </view>
  <view class="sp-item">
    <view wx:for="{{ spConstants.finals }}" wx:key="s" class="{{ item.c }}">
      {{ item.s }}
    </view>
  </view>
</view>
<view wx:if="{{ inputMode === 'py' }}" class="py">
  <view class="sub-title">声母</view>
  <view class="sub-title">韵母</view>
  <view class="py-initials">
    <view wx:for="{{ pyInitials }}" wx:key="s" class="{{ item.c }}">
      {{ item.s }}
    </view>
  </view>
  <view class="py-finals">
    <view wx:for="{{ pyFinals }}" wx:key="s" class="{{ item.c }}">
      {{ item.s }}
    </view>
  </view>
</view>
